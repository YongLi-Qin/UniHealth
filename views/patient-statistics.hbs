<link rel="stylesheet" type="text/css" href= "/css/patient-statistics.css">
<script src="https://kit.fontawesome.com/74c293aa5a.js" crossorigin="anonymous"></script> 
<script src="/UniHealth/public/js/helpers.js"></script>

{{> patient-navbar}}
<div id="main"> 
        <div class = "aboveTable1">
            <h1>{{patient.firstname}} {{patient.lastname}}</h1>
        </div>

        <div class = "aboveTable2">
            <h2>{{startDate}} - {{endDate}}</h2>
        </div>

    <div class="mainTable">
        <table>
            <tr>
                <th>DATE</th>
                <th>Blood glucose level</th>
                <th>Weight</th>
                <th>Dose of insulin taken</th>
                <th>Exercise</th>
            </tr>

            {{#each records}}
                <tr>
                    <td>{{this.date}}</td>
                    {{#checkThreshold this.bloodGlucoseLevelData ../patient.management.bloodGlucoseLevel}}{{/checkThreshold}}
                    {{#checkThreshold this.weightData ../patient.management.weight}}{{/checkThreshold}}
                    {{#checkThreshold this.doesesOfInsulinTakenData ../patient.management.doesesOfInsulinTaken}}{{/checkThreshold}}
                    {{#checkThreshold this.exerciseData ../patient.management.exercise}}{{/checkThreshold}} 
                </tr> 
            {{/each}}

         </table>
</div>