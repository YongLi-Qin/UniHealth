<link rel="stylesheet" type="text/css" href= "/css/patient-record.css">
<script src="https://kit.fontawesome.com/74c293aa5a.js" crossorigin="anonymous"></script>
<!--<meta name="viewport" content="width=device-width, initial-scale=1.0" />-->


    {{> patient-navbar}}

    <div class="shu">


        <div class = date>
            <h3>{{date}}</h3>
        </div>

        <div class="blood">
            <div class="bloodcolor">
                <label for="data" class="bloodtext">Blood Glucose Level</label>
            </div>
            <form action="/patient/add-data/bloodGlucoseLevel" method="POST">
                <label for="data">Data</label>
                <input class="kk1" type="number" name="data" value="{{record.bloodGlucoseLevelData}}" min='0' max='50' step="0.1" reuqired/>
                <input class="kk2" type="submit" value="Submit" />
            </form>
            <form action="/patient/add-comment/bloodGlucoseLevel" method="POST">
                <label for="data">Comment:</label>
                <input class="kk1" type="text" name="data" value="{{record.bloodGlucoseLevelComment}}" required />
                <input class="kk2" type="submit" value="Submit"/>
            </form>
         </div>

         <div>&nbsp;&nbsp;</div>
    
         <div class="weight">
            <div class="weightcolor">
                <label for="data" class="weighttext">Wieght</label>
            </div>
            <form action="/patient/add-data/weight" method="POST">
                <label for="data">Data:</label>
                <input class="kk1" type="number" name="data" value="{{record.weightData}}" min='30' max='300' step="0.1" required/>
                <input class="kk2" type="submit" value="Submit"/>
            </form>
            <form action="/patient/add-comment/weight" method="POST">
	            <label for="data">Comment:</label>
	            <input class="kk1" type="text" name="data" value="{{record.weightComment}}" required/>
	            <input class="kk2" type="submit" value="Submit"/>
            </form>
          </div>
    
          <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
     
          <div class="dose">
            <div class="dosecolor">
                <label for="data" class="dosetext">Doeses Of Insulin Taken</label>
            </div>
            <form action="/patient/add-data/doesesOfInsulinTaken" method="POST">
                <label for="data">Data:</label>
                <input class="kk1" type="number" name="data" value="{{record.doesesOfInsulinTakenData}}" min='0' max='30' step="1" required/>
                <input class="kk2" type="submit" value="Submit"/>
            </form>
            <form action="/patient/add-comment/doesesOfInsulinTaken" method="POST">
                <label for="data">Comment</label>
                <input class="kk1" type="text" name="data" value="{{record.doesesOfInsulinTakenComment}}" required/>
                <input class="kk2" type="submit" value="Submit"/>
            </form>
          </div>
    
          <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
     
          <div class="exercise">
            <div class="excolor">
                <label for="data" class="exercise">Exercise</label>
            </div>
            <form action="/patient/add-data/exercise" method="POST">
                <label for="data">Data:</label>
                <input class="kk1" type="number" name="data" value="{{record.exerciseData}}" min='0' max='100000' step="1" required/>
                <input class="kk2" type="submit" value="Submit"/>
            </form>
            <form action="/patient/add-comment/exercise" method="POST">
                <label for="data">Comment:</label>
                <input class="kk1" type="text" name="data" value="{{record.exerciseComment}}" required/>
                <input class="kk2" type="submit" value="Submit"/>
            </form>          
        </div>

        <a href="/patient/dashboard">BACK</a>